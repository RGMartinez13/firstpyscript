#Condition Statements
def drink(money):
	if money >= 2:
		return "you've gots yaself a drink"
	else:
		return "No drinky drinky"
		
print(drink(3))		
print(drink(1))

def alcohol(age, money):
  if (age >=21) and (money >=5):
    return "we are getting a drink!"
  elif (age >= 21) and (money < 5):
    return "Come back with mo dollas"
  elif (age < 21) and (money >= 5):
    return "Nice try wise guy"
  else:
    return "you too poor and too young"

print(alcohol(21,5))
print(alcohol(21,4))	
print(alcohol(20,4))	

nl()
#Lists - Have brackets []
movies = ["When Harry Met Sally", "The Hangover", "The Perks of Being a Wallflower", "The Exorcist"]

print(movies[1])
print(movies[0])
print(movies[1:3])
print(movies[1:])
print(movies[:2])
print(movies[-1])

print(len(movies)) #adds
movies.append("JAWS")
print(movies)

movies.pop() #removes the very last item in the list
print(movies)

movies.pop(0) #you can choose what to remove as well
print(movies)

nl()
#Tuples - Do not change, ()
grades = ("a","b","c","d","f")
print(grades[1])

nl()
#Looping

#For loops - start to finish of an iterate
vegetables = ["cucumber","spinach","cabbage"]
for x in vegetables:
	print(x)
	
#While loops - Execute as long as true
i = 1

while i < 10:
	print (i)
	i += 1
	
